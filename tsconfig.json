{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "target": "es2020",
      "lib": ["es2020", "dom"],
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "preserveConstEnums": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  